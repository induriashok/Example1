<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/proffers_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:src="@drawable/back_arrow_ic" />

        <!-- <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/myaccountback"
             android:text="ABOUT US"
             android:textColor="@color/white"
             android:textSize="18dp"
             android:visibility="gone"
             android:textStyle="bold" />
 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <com.joystays.joy.customfonts.CustomTextViewNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="OTP"
            android:textColor="@color/text_black"
            android:textSize="20sp" />


        <com.joystays.joy.customfonts.CustomTextViewNormal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:text="We have sent you an SMS with a OTP Code \n to your number for verification"
            android:textSize="@dimen/_12sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Enter OTP"
                android:textSize="@dimen/_12sdp" />

            <com.joystays.joy.utils.EditTextOtp
                android:id="@+id/etOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="10dp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et1"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:backgroundTint="@color/text_black"
                    android:gravity="center"
                    android:hint="−"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColorHint="@color/text_black" />


                <EditText
                    android:id="@+id/et2"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@color/text_black"
                    android:gravity="center"
                    android:hint="−"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColorHint="@color/text_black" />

                <EditText
                    android:id="@+id/et3"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@color/text_black"
                    android:gravity="center"
                    android:hint="−"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColorHint="@color/text_black" />

                <EditText
                    android:id="@+id/et4"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@color/text_black"
                    android:gravity="center"
                    android:hint="−"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColorHint="@color/text_black" />

                <EditText
                    android:id="@+id/et5"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@color/text_black"
                    android:gravity="center"
                    android:hint="−"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColorHint="@color/text_black" />

                <EditText
                    android:id="@+id/et6"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:backgroundTint="@color/text_black"
                    android:gravity="center"
                    android:hint="−"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textColorHint="@color/text_black" />
            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_30sdp">

            <LinearLayout
                android:id="@+id/linear_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_g">

                <com.joystays.joy.customfonts.CustomTextViewNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_14sdp"
                    android:text="Verify"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/tv_resnedotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Resend code "
                android:textColor="#5cff41"
                android:textSize="16sp" />

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tvTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textColor="#5cff41"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>