<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/back_arrow_ic" />

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_30sdp"
                android:gravity="center"
                android:text="Secure Booking"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_a"
        android:layout_marginTop="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="85dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:gravity="center">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/owner_iv"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/round_green_bg"
                                android:padding="1dp"
                                android:src="@drawable/dummy_image" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Property Manager"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="10dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.7"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.joystays.joy.customfonts.CustomTextViewBold
                                android:id="@+id/tv_owner_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Joy Hostel Owner P. Subb Reddy "
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/_11sdp" />

                            <!-- <com.iprismtech.joy.customfonts.CustomTextViewBold
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_marginLeft="2dp"
                                 android:text="P.Sudakar Reddy"
                                 android:textColor="@color/text_black"
                                 android:textSize="12sp" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Language :"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/_8sdp" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_language"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="Telugu ,Hindi,English"
                                android:textColor="@color/text_dark_gray"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                        <com.joystays.joy.customfonts.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:maxLines="20"
                            android:text="@string/fell_free"
                            android:textSize="@dimen/_6sdp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_call"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/call_icon" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_v"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:id="@+id/tv_from_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="14th Jun"
                                    android:textColor="@color/text_green"
                                    android:textSize="15sp" />

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="12pm"
                                    android:textColor="@color/text_gray"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_package_type"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Monthly Basis"
                                android:textColor="@color/text_gray"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:id="@+id/tv_to_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="1st July"
                                    android:textColor="@color/text_red"
                                    android:textSize="15sp" />

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="12pm"
                                    android:textColor="@color/text_gray"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/ll_note"
                            android:orientation="horizontal"
                            android:weightSum="2">



                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Note :"
                                    android:textColor="@color/text_green"
                                    android:textSize="13sp" />

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="5dp"
                                    android:id="@+id/tv_note"
                                    android:text="@string/lorem3"
                                    android:textColor="@color/text_gray"
                                    android:textSize="13sp" />



                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="Actual Price"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_owner_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"

                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="Joy Discount"
                                android:textColor="@color/text_green"
                                android:textSize="14sp" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_joydiscount_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="tgry"

                                android:textColor="@color/text_green"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:textColor="@color/text_gray"
                                android:text="Joy Price"
                                android:textSize="14sp" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_joy_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="fhj"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="Amount Payable including all Taxes"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="250"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_refund_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="Adavance"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_caution_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_walte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="1">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_wallet_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="Wallet Amount"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_wt_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_referral_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="Refferal Amount"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_refreal_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="250"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp" />

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:orientation="vertical">

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Room Tarriff"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="2dp"
                                        android:text="RS"
                                        android:textColor="@color/text_gray"
                                        android:textSize="14sp" />

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:id="@+id/tv_per_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginRight="4dp"

                                        android:textColor="@color/text_gray"
                                        android:textSize="14sp" />

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="4dp"
                                        android:text="*"
                                        android:textColor="@color/text_gray"
                                        android:textSize="14sp" />

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="4dp"
                                        android:text="1"
                                        android:textColor="@color/text_gray"
                                        android:textSize="14sp" />

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="4dp"
                                        android:text="Bed"
                                        android:textColor="@color/text_gray"
                                        android:textSize="14sp" />

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="4dp"
                                        android:text="*"
                                        android:textColor="@color/text_gray"
                                        android:textSize="14sp" />

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:id="@+id/tv_no_days"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="4dp"

                                        android:textColor="@color/text_gray"
                                        android:textSize="14sp" />

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="4dp"
                                        android:text="Days"
                                        android:textColor="@color/text_gray"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:text="Total Amount(including all taxes)"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:orientation="vertical"

                                >

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp" />

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:id="@+id/tv_total_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/text_gray"
                                    android:textSize="14sp" />

                                <com.joystays.joy.customfonts.CustomTextViewBold
                                    android:id="@+id/new_total_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/text_black"
                                    android:textSize="14sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/ctvb_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight="0.45"
                android:background="@drawable/login_bg"
                android:gravity="center"
                android:padding="@dimen/_9sdp"
                android:text="Cancel"
                android:textColor="@color/text_red"
                android:textSize="@dimen/_14sdp" />

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/continue_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight="0.55"
                android:background="@drawable/login_bg"
                android:gravity="center"
                android:padding="@dimen/_9sdp"
                android:text="Continue booking"
                android:textColor="@color/text_green"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>