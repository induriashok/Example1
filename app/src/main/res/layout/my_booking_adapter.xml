<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardCornerRadius="5dp"
                android:layout_margin="2dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dummy_image"
                    android:scaleType="fitXY"
                    android:background="@color/text_red"
                    android:padding="1dp"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.78"
                android:orientation="vertical">

                <com.joystays.joy.customfonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Hilton Hostel"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/locaton_ic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <com.joystays.joy.customfonts.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2310 Fultoon Street,"
                            android:textColor="@color/text_black"
                            android:textSize="10sp"/>

                        <com.joystays.joy.customfonts.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="San Fransisco, Hyderabad"
                            android:textSize="10sp"
                            android:textColor="@color/text_black" />
                        <com.joystays.joy.customfonts.CustomTextViewNormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="11sp"
                            android:text="Mon, 3 June in Tue, 2019"
                            android:textColor="@color/text_gray" />
                    </LinearLayout>
                </LinearLayout>



                <com.joystays.joy.customfonts.CustomTextViewBold
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_bg"
                    android:text="Booked"
                    android:textSize="12sp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.25">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:src="@drawable/favorite_red_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rating_bg"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/golden_star"/>
                    <com.joystays.joy.customfonts.CustomTextViewNormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/text_black"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:text="4.0"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>