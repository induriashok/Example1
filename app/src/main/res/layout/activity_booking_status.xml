<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.PaymentMethodActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/back_arrow_ic" />

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_30sdp"
                android:gravity="center"
                android:text="Booking Status"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <com.joystays.joy.customfonts.CustomTextViewBold
        android:id="@+id/tv_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:text="OTP: 123456"
        android:textColor="@color/text_green">

    </com.joystays.joy.customfonts.CustomTextViewBold>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Property name ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_hostel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="hostel"></com.joystays.joy.customfonts.CustomTextViewNormal>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Property Owner ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_owner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="1234567894">

            </com.joystays.joy.customfonts.CustomTextViewNormal>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Contact Number ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="hostel">



            </com.joystays.joy.customfonts.CustomTextViewNormal>

            <ImageView
                android:id="@+id/call_icon"
                android:layout_width="0dp"
                android:layout_weight="0.05"
                android:layout_height="@dimen/_18sdp"
                android:scaleType="fitXY"
                android:src="@drawable/call_green"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Floor ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_floor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="hostel"></com.joystays.joy.customfonts.CustomTextViewNormal>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Room ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_room"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="hostel"></com.joystays.joy.customfonts.CustomTextViewNormal>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Bed ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_bed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="hostel"></com.joystays.joy.customfonts.CustomTextViewNormal>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"

            android:orientation="horizontal"
            android:weightSum="1">


            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Booking Date ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_paid_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="hostel">

            </com.joystays.joy.customfonts.CustomTextViewNormal>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"

            android:orientation="horizontal"
            android:weightSum="1">


            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="PackageType ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_pacakagetype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="package">

            </com.joystays.joy.customfonts.CustomTextViewNormal>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"

            android:orientation="horizontal"
            android:weightSum="1">


            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Paid Amount ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_paid_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="hostel">

            </com.joystays.joy.customfonts.CustomTextViewNormal>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"

            android:orientation="horizontal"
            android:weightSum="1">


            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Status ">

            </com.joystays.joy.customfonts.CustomTextViewBold>

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="hostel"
                android:layout_weight="0.6"
                android:textColor="@color/text_black">

            </com.joystays.joy.customfonts.CustomTextViewBold>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/booking_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </androidx.recyclerview.widget.RecyclerView>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginBottom="@dimen/_30sdp"
               android:orientation="vertical"
               >

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.joystays.joy.customfonts.CustomTextViewBold
                    android:id="@+id/complinets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/floor_text_gray"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Compliant"
                    android:textColor="@color/text_black">

                </com.joystays.joy.customfonts.CustomTextViewBold>



                <com.joystays.joy.customfonts.CustomTextViewBold
                    android:id="@+id/directions"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/floor_text_gray"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="Directions"
                    android:textColor="@color/text_black">

                </com.joystays.joy.customfonts.CustomTextViewBold>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <com.joystays.joy.customfonts.CustomTextViewBold

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/cancel_book"
                    android:padding="@dimen/_8sdp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/floor_text_gray"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_2sdp"
                    android:text="CancelBooking"
                    android:textColor="@color/text_black">

                </com.joystays.joy.customfonts.CustomTextViewBold>






            </RelativeLayout>

           </LinearLayout>


    </LinearLayout>
    </ScrollView>



    <com.joystays.joy.customfonts.CustomTextViewBold
        android:id="@+id/tv_nodata"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:text="No Data is available until you book a hostel"
        android:textColor="@color/text_black"></com.joystays.joy.customfonts.CustomTextViewBold>


</LinearLayout>