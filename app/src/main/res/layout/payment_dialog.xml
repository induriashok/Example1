<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_margin="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_payment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.joystays.joy.customfonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5000/-"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_28sdp"
                    android:textColor="@color/lite_green" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/view_line"
                    android:layout_marginHorizontal="@dimen/_20sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center">

                    <com.joystays.joy.customfonts.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OTP-"
                        android:textColor="@color/text_black" />

                    <com.joystays.joy.customfonts.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="292083"
                        android:textColor="@color/text_black" />

                </LinearLayout>

                <com.joystays.joy.customfonts.CustomTextViewNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem3"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:maxLines="3"
                    android:layout_marginHorizontal="@dimen/_10sdp" />


                <LinearLayout
                    android:id="@+id/linear_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:orientation="horizontal">

                    <com.joystays.joy.customfonts.CustomTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Confirm"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/_15sdp"
                        android:paddingVertical="@dimen/_8sdp"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:background="@drawable/card_gg" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>