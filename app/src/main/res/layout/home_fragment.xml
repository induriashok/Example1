                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="@dimen/_18sdp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_image_boy"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/round_green_bg"
                                android:padding="2dp"
                                android:src="@drawable/hostel_boy" />


                            <com.joystays.joy.customfonts.CustomTextViewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="55dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="55dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/text_green_bg"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="Boy"
                                android:textColor="@color/white"
                                android:textSize="14sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_image_girl"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/round_white_bg"
                                android:padding="2dp"
                                android:src="@drawable/hostel_girl" />

                            <com.joystays.joy.customfonts.CustomTextViewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="55dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="55dp"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/text_green_bg"
                                android:gravity="center"
                                android:padding="4dp"
                                android:text="Girl"
                                android:textColor="@color/white"
                                android:textSize="14sp" />


                        </LinearLayout>


                    </LinearLayout>


