<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.SecureBookingDetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/back_arrow_ic" />

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="@dimen/_30sdp"
                android:text="Secure Booking"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_v"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/_50sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <ImageView
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_marginLeft="25dp"
                                    android:src="@drawable/summary_green" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="45dp"
                                    android:gravity="center">

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Joy Hostel Verified"
                                        android:textColor="@color/text_black"
                                        android:textSize="18sp"
                                        android:id="@+id/hostel_name"/>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.xfinity.dahdit.DottedLine
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="@dimen/_34sdp"
                                app:dotRadius="1dp"
                                app:minimumDotGap="2dp"
                                app:dotColor="@color/text_green"
                                android:layout_gravity="center"
                                app:orientation="vertical"/>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:background="@color/view_line" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <ImageView
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_marginLeft="25dp"
                                    android:src="@drawable/summary_green" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="45dp"
                                    android:gravity="center">

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Booking Confirmed"
                                        android:textColor="@color/text_black"
                                        android:textSize="18sp" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.xfinity.dahdit.DottedLine
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="@dimen/_34sdp"
                                app:dotRadius="1dp"
                                app:minimumDotGap="2dp"
                                app:dotColor="@color/text_green"
                                android:layout_gravity="center"
                                app:orientation="vertical"/>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:background="@color/view_line" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <ImageView
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_marginLeft="25dp"
                                    android:src="@drawable/summary_green" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="45dp"
                                    android:gravity="center">

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Payment Done"
                                        android:textColor="@color/text_black"
                                        android:textSize="18sp" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.xfinity.dahdit.DottedLine
                                android:id="@+id/line4"
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="@dimen/_34sdp"
                                app:dotRadius="1dp"
                                app:minimumDotGap="2dp"
                                app:dotColor="@color/text_green"
                                android:layout_gravity="center"
                                app:orientation="vertical"/>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:background="@color/view_line" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <ImageView
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:layout_marginLeft="25dp"
                                    android:src="@drawable/summary_black" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="45dp"
                                    android:gravity="center">

                                    <com.joystays.joy.customfonts.CustomTextViewNormal
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Owner Confirmation"
                                        android:textColor="@color/text_gray"
                                        android:textSize="18sp" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/tv_call"
                    android:background="@drawable/round_white_bg">

                    <com.joystays.joy.customfonts.CustomTextViewNormal
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="- Please Call to Owner Confirmation-"
                        android:textColor="@color/text_black"
                        android:textSize="14sp" />
                </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/text_green"
                android:text="Note : "
                android:textSize="10sp" />

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:text="@string/lorem5"
                android:textSize="10sp" />


        </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="@dimen/_30sdp">

        <LinearLayout
            android:id="@+id/linear_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_g">

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_14sdp"
                android:textSize="@dimen/_15sdp"
                android:text="OK"
                android:textColor="@color/text_red" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>