<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.WanttoVacantActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/back_arrow_ic" />

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_30sdp"
                android:gravity="center"
                android:text="We Want to Vacant"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_a">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="80dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <com.joystays.joy.customfonts.CustomTextViewNormal
                        android:id="@+id/ctvn_mytrip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/tarrif_green"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="My Trip"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/view_line" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5">

                    <com.joystays.joy.customfonts.CustomTextViewNormal
                        android:id="@+id/ctvn_vacant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Vacant"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />


                </LinearLayout>

            </LinearLayout>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:id="@+id/tv_inform"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="85dp"
                android:background="@drawable/login_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="Inform to Hostel Owner"
                android:textColor="@color/text_black"
                android:textSize="12sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linear_mytrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_trip_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="25dp"
                            android:layout_weight="0.5"
                            android:gravity="left"

                            android:orientation="vertical">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="From" />

                            <ImageView
                                android:id="@+id/ic_from_my_trip"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="5dp"
                                android:src="@drawable/blue_calender" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_from_trip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="25dp"
                            android:layout_weight="0.5"
                            android:gravity="right"
                            android:orientation="vertical">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="15dp"
                                android:gravity="right"
                                android:text="To" />

                            <ImageView
                                android:id="@+id/ic_to_my_trip"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="5dp"

                                android:src="@drawable/blue_calender" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_to_trip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/owner_bg"
                        android:orientation="vertical">

                        <com.joystays.joy.customfonts.CustomEditTextNormal
                            android:id="@+id/et_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:background="@null"
                            android:hint="Write a text"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_my_trip_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_10sdp">

                    <com.joystays.joy.customfonts.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trip Details: "
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_10sdp">

                        <com.joystays.joy.customfonts.CustomTextViewNormal
                            android:id="@+id/tv_my_trip_from"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.5"
                            android:text="From"
                            android:textColor="@color/text_black" />


                        <com.joystays.joy.customfonts.CustomTextViewNormal
                            android:id="@+id/tv_my_trip_to"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="0.5"
                            android:text="To"
                            android:textColor="@color/text_black" />
                    </LinearLayout>

                    <com.joystays.joy.customfonts.CustomTextViewNormal
                        android:id="@+id/tv_trip_extended"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="Trip Extended : No"
                        android:textColor="@color/text_black" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_extend_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="25dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Extend Trip Days" />

                            <ImageView
                                android:id="@+id/ic_extend_my_trip"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="5dp"
                                android:src="@drawable/blue_calender" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_extend_trip_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/owner_bg"
                        android:orientation="vertical">

                        <com.joystays.joy.customfonts.CustomEditTextNormal
                            android:id="@+id/et_trip_extend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:background="@null"
                            android:hint="Write a text" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_vacant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_vacate_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="From" />

                                <ImageView
                                    android:id="@+id/iv_vacate_from"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:padding="5dp"
                                    android:src="@drawable/blue_calender" />

                                <com.joystays.joy.customfonts.CustomTextViewNormal
                                    android:id="@+id/tv_vacate_req_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="25dp"
                            android:background="@drawable/owner_bg"
                            android:orientation="vertical">

                            <com.joystays.joy.customfonts.CustomEditTextNormal
                                android:id="@+id/et_vacate_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:background="@null"
                                android:hint="Write a text"
                                android:textSize="14sp" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_vacate_req"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.joystays.joy.customfonts.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="My Vacate request"
                            android:textColor="@color/text_black" />

                        <com.joystays.joy.customfonts.CustomTextViewNormal
                            android:id="@+id/tv_vacate_req"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:text="Vacated requested from"
                            android:textColor="@color/text_black" />

                        <com.joystays.joy.customfonts.CustomTextViewNormal
                            android:id="@+id/tv_vacate_extended"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:text="Vacation Request Extended" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_vacate_extend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Extend Days" />

                            <ImageView
                                android:id="@+id/iv_vacate_extend"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="5dp"
                                android:src="@drawable/blue_calender" />

                            <com.joystays.joy.customfonts.CustomTextViewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="3 Days - 7000/-"
                                android:textColor="@color/dark_green" />

                            <com.joystays.joy.customfonts.CustomTextViewNormal
                                android:id="@+id/tv_request_extended_to"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/owner_bg"
                        android:orientation="vertical">

                        <com.joystays.joy.customfonts.CustomEditTextNormal
                            android:id="@+id/et_extend_vacate_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:background="@null"
                            android:hint="Write a text" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/tv_text_daily"
                android:text="Your are in Daily Basis" />

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="@dimen/_30sdp">

        <LinearLayout
            android:id="@+id/linear_sent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/card_g"
            android:gravity="center"
            android:orientation="horizontal">

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_14sdp"
                android:text="Send"
                android:textColor="@color/text_red"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>