<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.PaymentMethodActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/back_arrow_ic" />

            <com.joystays.joy.customfonts.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="@dimen/_30sdp"
                android:text="Invite &amp; Earn"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_below="@id/card_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_invite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_invite_plain"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/joy_refer"/>

        <com.joystays.joy.customfonts.CustomTextViewBold
            android:id="@+id/refferal_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REFERAL CODE"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_120sdp"
            android:textColor="@color/text_gray"
            android:textSize="20sp"/>


        <ImageView
            android:id="@+id/img_pic"
            android:layout_below="@id/refferal_tv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gift_pack_icon"/>

        <com.joystays.joy.customfonts.CustomTextViewNormal
            android:layout_below="@+id/img_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:text="Share the code with your friends.when they use Referal for the first time. you will get Rs 250 "
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_des"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>

        <com.joystays.joy.customfonts.CustomTextViewNormal
            android:layout_below="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:text="JOY123456"
            android:id="@+id/tv_code"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="@dimen/_30sdp">

        <LinearLayout
            android:id="@+id/linear_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/card_g"
            android:gravity="center"
            android:orientation="horizontal">

            <com.joystays.joy.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
             android:padding="@dimen/_14sdp"
                android:text="Invite your Friends"
                android:textColor="@color/text_red"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>